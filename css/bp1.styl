// Acciones al activar el mainCheck				
#mainCheckbox
	display none
#mainCheckbox:checked ~ .calendario 
	margin -80px 0 0 0 
	width 100%
#mainCheckbox:checked ~ .llamadaClendarioLabel
	background none
#mainCheckbox:checked ~ .llamadaClendarioLabel .botonLabel 
	transform rotateZ(180deg)
	-ms-transform rotateZ(180deg)
	-webkit-transform rotateZ(180deg)
#mainCheckbox:checked ~ .botonSecciones
	margin-left -100%
#mainCheckbox:checked ~ .llamadaClendarioTitulo
	margin-left -100%
#mainCheckbox:checked ~ .seccionesContenido
	margin-left -100%

// Animaciones
@keyframes animacion
	0%
		transform translate(-150%, -150%)
		-ms-transform translate(-150%, -150%)
		-webkit-transform translate(-150%, -150%)
	50%
		transform translate(50%, 10%)
		-ms-transform translate(50%, 10%)
		-webkit-transform translate(50%, 10%)

	100%
		transform translate(-150%, -150%)
		-ms-transform translate(-150%, -150%)
		-webkit-transform translate(-150%, -150%)

