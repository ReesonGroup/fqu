footer	
	background rgba(verde,.8)
	color texto
	overflow hidden
	padding 20px
	img
		float left
		height 50px
		opacity .8
		vertical-align middle
		width auto
	.right
		float right
		margin 8px 0 0 0
		vertical-align bottom
		span
			display inline-block
			font-weight 400
			&:after
				content " |"
		.email
			display inline-block
			&:after
				content email
				font-family icomoon
				vertical-align bottom
.header
	height 500px
	overflow hidden
	position relative
	width 100%
	z-index 5
	.heroOuter
		height 100%
		width 100%
		.hero
			background gris
			height 100%
			width 100%
			animation animacion 150s infinite
			-webkit-animation animacion 150s infinite
			.heroInner
				margin -50px 0 0 0 
				height 250%
				width 250%
				background-image url(../img/hero.jpg)
				background-position 0
				background-repeat repeat-x repeat-y 
				background-size 45% auto
				transform: skew(0deg, 10deg);
				-ms-transform: skew(0deg, 10deg);
				-webkit-transform: skew(0deg, 10deg);
				transform: scale(1, 2, 3, 4);
				-ms-transform: scale(1, 2, 3, 4);
				-webkit-transform: scale(1, 2, 3, 4);
	.logoOuter
		position absolute
		top 0 
		right 0
		bottom 0
		left 0
		@css {
			background: -moz-linear-gradient(left,  rgba(18,19,20,1) 0%, rgba(18,19,20,1) 39%, rgba(18,19,20,0) 100%);
			background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(18,19,20,1)), color-stop(39%,rgba(18,19,20,1)), color-stop(100%,rgba(18,19,20,0)));
			background: -webkit-linear-gradient(left,  rgba(18,19,20,1) 0%,rgba(18,19,20,1) 39%,rgba(18,19,20,0) 100%);
			background: -o-linear-gradient(left,  rgba(18,19,20,1) 0%,rgba(18,19,20,1) 39%,rgba(18,19,20,0) 100%);
			background: -ms-linear-gradient(left,  rgba(18,19,20,1) 0%,rgba(18,19,20,1) 39%,rgba(18,19,20,0) 100%);
			background: linear-gradient(to right,  rgba(18,19,20,1) 0%,rgba(18,19,20,1) 39%,rgba(18,19,20,0) 100%);
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#121314', endColorstr='#00121314',GradientType=1 );

		}
		h1
			color texto
			font-size 24px
			font-weight 400
			letter-spacing 1px
			line-height 1.3em
			text-align center
			text-transform uppercase
			span
				font-weight 700
		.logoInner
			padding 45px 0 30px 0 
			figure
				img
					display block
					margin 0 auto
					width 220px
