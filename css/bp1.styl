
body
	margin 0 0 3em 0
header
	background secundario
	height 50px
	overflow hidden 
	h1
		color gray
		font-size .95em
		font-weight 300
		line-height 2.5em
		margin 0
		padding 0 0 0 70px
		span
			color black
			font-weight 400
			margin 0
	p
		color white
		font-weight 900
		font-style italic
		margin -37px 0 0 0 
		padding 0 0 0 290px
	.logo
		background-image url(../img/logo.png)
		background-position 0px 0px 
		background-repeat no-repeat
		background-size auto 50px
		width 600px
		height 50px
section
	.secciones
		margin 0 10px
		.salutaciones
			.salutacion
				box-shadow 0 0 10px rgba(black,.3)
				margin 0 0 15px
				position relative
				width auto
				.alcaldesa
					background-image url(../img/salutacions/alcaldesa.jpg)
					background-position 0px 0px 
					background-repeat no-repeat
					background-size 100% auto
				.enlace
					position absolute
					top 0
					left 0
					bottom 0
					right 0
				.pregonera
					background-image url(../img/salutacions/pregonera.jpg)
					background-position 0px 0px 
					background-repeat no-repeat
					background-size 100% auto
				.regidora
					background-image url(../img/salutacions/regidora.jpg)
					background-position 0px 0px 
					background-repeat no-repeat
					background-size 100% auto
				.imagen
					width auto
					height 100px
					h3
						color white
						content 'Núria Balagué Raga'
						font-style italic
						text-shadow 0px 0px 1px rgba(black,.8)
						position absolute
						right 10px
						top 5px
		.pubilles
			box-shadow 0 0 10px rgba(black,.3)
			// .pubillasHeader
			.pubillesCaras
				background #ebf0f4
				border-top 1px solid borde
				border-bottom 1px solid borde
				padding 20px 0
				overflow-x auto
				white-space nowrap
				.cara
					display inline-block
					margin 0 20px 0 0 
					&:first-child
						padding 0 0 0 20px
					img
						border 3px solid white
						border-radius 50%
						width 90px
						height auto

			// .pubillesStatus
.bg 
	background azul
	height 100%
	left 0
	position fixed
	top 0
	width 100%
	z-index -50						
.invisible
	display none
.menu
	background secundario
	border-radius 5px
	bottom 0
	color white
	left 0
	margin 0 auto .4em auto
	position fixed
	right 0
	width 97%
	z-index 20
	animation animacionMenu 1s 1
	-webkit-animation animacionMenu 1s 1
	.botones
		.botonMenu
			display inline-block
			line-height 2em
			text-align center
			vertical-align bottom
			width 32%
			a
				color white
				text-decoration none
			.compartir
				font-size 1.2em
				&:after
					content '\e602'
					font-family icono
					font-size .9em
				&:active
					color rgba(white,.3)
			.mapa
				&:after
					content '\e600'
					font-family icono
					font-size 1.2em
				&:active
					color rgba(white,.3)
			.menuResizer
				font-weight 400
				&:active
					color rgba(white,.3)
				.aumentar
					&:after
						content 'A'
						font-size 1em
				.disminuir
					&:after
						content 'A'
						font-size .6em
	.resizer
		background rgba(black,.2)
		border-top 1px solid rgba(#283148,.4)
		box-shadow 0px 1px 0px rgba(white,.1)
		color rgba(white,.7)
		padding .4em 0
		.botonResizer
			display inline-block
			font-weight 400
			text-align center
			width 49%
			.disminuir
				border-right 1px solid rgba(#283148,.4)
				box-shadow 1px 0px 0px rgba(white,.1)
				&:after
					content 'A'
					font-size .7em
				&:active
					color rgba(white,.3)
			.aumentar
				&:after
					content 'A'
					font-size 1.2em
				&:active
						color rgba(white,.3)
	.social
		background rgba(black,.2)
		border-top 1px solid rgba(#283148,.45)
		padding .8em 0 .6em 0
		.botonSocial
			display inline-block
			font-weight 400
			text-align center
			width 49%
			.twitter
				margin 0 0 0 1.5em
.texto
	background white
	height auto
	padding 10px
	width 100%
	h2
		color titulo
		font-size 1.2em
		font-style italic
		font-weight bigger
		padding 0 0 10px
		text-align center
		text-transform uppercase
	h3
		border-top 1px solid rgba(titulo,.3)
		color titulo
		font-size .8em
		font-weight 300
		margin 0 5px
		padding 5px 0 10px 0 
		text-align center
.titulo
	color gris
	font-size .8em
	font-weight 300
	margin 10px 0
	text-align center
	text-transform uppercase
	position relative
	.linea
		background gris
		display block
		height 1px
		position absolute
		top 10px
		width 100%
		z-index 1
	.texto
		background azul
		padding 0 15px
		position relative
		z-index 2


