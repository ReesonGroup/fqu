

.calendario
	float right
	width 0%
	.eventoActual
		background white
		box-shadow 0 0 50px rgba(black,.5) inset
		border-top 5px solid rojoLogo
.ha-header
	background-image url(../img/hero.jpg)
	background-position 0 -100px
	background-repeat repeat-x repeat-y 
	background-size 90% auto
	height 500px
.ha-header-perspective
	height 100%
	position relative
	width 100%
	.logoOuter
		background rgba(white,.8)
		padding 25px 0 0 0 
		position absolute
		top 0 
		right 0 
		bottom 0 
		left 0
		h1
			color rgba(black,.8)
			font-size 26px
			font-weight 400
			letter-spacing 1px
			line-height 1.3em
			text-align center
			text-transform uppercase
			span
				font-weight 700
		.logoInner
			figure
				img
					display block
					margin 0 auto
					width 250px
.llamadaClendarioLabel
	float right
	.botonLabel
		background white
		border-bottom 3px solid rgba(separador,1)
		color rojoClaro
		height 80px
		text-align center
		width 40px
		.flecha
			font-size 1.5em
			&:after
				content flechaDerecha
				font-family icono
				line-height 80px
.llamadaClendarioTitulo
	background rojoLogo
	font-weight 400
	height 80px
	h2
		color white
		font-size 21px
		font-style italic
		letter-spacing 1px
		padding 15px 0 0 30px
		text-transform uppercase
		span
			display block
			font-size 16px 
			letter-spacing 0px
			text-transform lowercase
#mainCheckbox
	display none
#mainCheckbox:checked ~ .calendario 
	width 100%




