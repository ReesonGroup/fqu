				content '\e607'
				font-family icono
				font-size 2em
				position absolute
				right -25px
				top -5px
header
	background-image url(../img/castell.png)
	background-position 50% 254px
	background-repeat no-repeat
	background-size 250px auto
	border-bottom 20px solid rgba(black,.7)
	color white
	height 400px
	letter-spacing 2px
	text-align center
	.fondo
		height 400px
		width 100%
		position relative
		z-index -5
		@css{
			background: rgb(34,118,159);
			background: -moz-linear-gradient(top,  rgba(34,118,159,1) 0%, rgba(119,179,206,1) 100%);
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(34,118,159,1)), color-stop(100%,rgba(119,179,206,1)));
			background: -webkit-linear-gradient(top,  rgba(34,118,159,1) 0%,rgba(119,179,206,1) 100%);
			background: -o-linear-gradient(top,  rgba(34,118,159,1) 0%,rgba(119,179,206,1) 100%);
			background: -ms-linear-gradient(top,  rgba(34,118,159,1) 0%,rgba(119,179,206,1) 100%);
			background: linear-gradient(to bottom,  rgba(34,118,159,1) 0%,rgba(119,179,206,1) 100%);
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#22769f', endColorstr='#77b3ce',GradientType=0 );
			}
	.texto
		position relative
		z-index 5
		top -350px
		h1
			display inline-block
			font-size 28px
			font-style italic
			text-transform uppercase
		p
			display inline-block
			font-size 28px
			font-style italic
		span
			display block
			font-size 21px
			font-style italic
			text-transform uppercase 
