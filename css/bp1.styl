
body
	margin 0 0 3em 0
footer
	background secundario
	position absolute
	top 100%
	left 0
	right 0
	height 200px
header
	background secundario
	height 50px
	overflow hidden 
	h1
		color gray
		font-size .95em
		font-weight 300
		line-height 2.5em
		margin 0
		padding 0 0 0 70px
		span
			color black
			font-weight 400
			margin 0
	p
		color white
		font-weight 900
		font-style italic
		margin -37px 0 0 0 
		padding 0 0 0 290px
	.logo
		background-image url(../img/logo.png)
		background-position 0px 0px 
		background-repeat no-repeat
		background-size auto 50px
		width 600px
		height 50px
.inicio
	margin 0 10px
	.llibret 
		.saludos
			.contenidoSaludos
				box-shadow 0 0 10px rgba(black,.3)
				.imagen
					width auto
					height 100px
					background-image url(../img/salutacions/ajuntament.jpg)
					background-position 0px 0px 
					background-repeat no-repeat
					background-size 100% auto
			.statusSaludos
				background white
				font-size .9em
				height 45px
				line-height 2.5em
				position relative
				a
					color titulo
					position absolute
					right 40px
					text-decoration none
					&:after
						color rgba(titulo,.8)
						content '\e607'
						font-family icono
						font-size 1.8em
						position absolute 
						right -30px 
		.salutaciones
			.salutacion
				box-shadow 0 0 10px rgba(black,.3)
				margin 0 0 15px
				position relative
				width auto
				.alcaldesa
					background-image url(../img/salutacions/alcaldesa.jpg)
					background-position 0px 0px 
					background-repeat no-repeat
					background-size 100% auto
				.enlace
					position absolute
					top 0
					left 0
					bottom 0
					right 0
				.pregonera
					background-image url(../img/salutacions/pregonera.jpg)
					background-position 0px 0px 
					background-repeat no-repeat
					background-size 100% auto
				.regidora
					background-image url(../img/salutacions/regidora.jpg)
					background-position 0px 0px 
					background-repeat no-repeat
					background-size 100% auto
				.imagen
					width auto
					height 100px
					h3
						color white
						content 'Núria Balagué Raga'
						font-style italic
						text-shadow 0px 0px 1px rgba(black,.8)
						position absolute
						right 10px
						top 5px
		.pubillas
			.contenidoPubilles
				box-shadow 0 0 10px rgba(black,.3)
				position relative
				.caras
					background #ebf0f4
					border-top 1px solid borde
					border-bottom 1px solid borde
					padding 35px 0 20px 0
					overflow-x auto
					white-space nowrap
					.cara
						display inline-block
						margin 0 20px 0 0 
						text-align center
						&:first-child
							padding 0 0 0 20px
						img
							box-shadow 0 0 10px rgba(black,.3)
							border-radius 50%
							width 90px
							height auto
						.nombre
							color rgba(black,.6)
							font-size .7em
							font-weight 400
							margin 10px 0 0 0 
				.statusPubillas
					background white
					font-size .9em
					height 45px
					line-height 2.5em
					position relative
					a
						color titulo
						position absolute
						right 40px
						text-decoration none
						&:after
							color rgba(titulo,.8)
							content '\e607'
							font-family icono
							font-size 1.8em
							position absolute 
							right -30px 
					span
						&:after
							color rgba(titulo,.8)
							content '\e601'
							font-family icono
							font-size 1.1em
							margin 0 0 0 20px
	.programa
		box-shadow 0 0 10px rgba(black,.3)
		background white
		overflow-x hidden
		position relative
		.botonera
			height auto
			overflow-x auto
			overflow-y hidden
			padding 10px 20px 0 10px 
			white-space nowrap
			width 100%
			position relative
			z-index 15
			ul
				text-align center
				.dia 
					border-radius 50%
					display inline-block
					height 65px 
					margin 0
					position relative
					width 55px
					p
						border-radius 50%
						color rgba(rosa,1)
						height 35px
						left 25%
						font-weight 900
						font-style italic
						line-height 1.6em
						position absolute
						text-align center
						top 17px
						width 35px 
						&:hover
							background rgba(rosa,1)
							color rgba(white,1)
							font-weight 400
					.centrarMes
						margin 0 0 0 .35em
					.nomDia
						color rgba(black,.4)
						font-size .7em
						font-weight 400
						left 35%
						position absolute
						top -5px
					&:last-child
						margin 0 2em 0 0
		.desplegarLista
			bottom 15px
			position absolute 
			right 10px
			span
				color rgba(titulo,.8)
				font-size .9em
				&:after
					color rgba(titulo,.8)
					content '\e604'
					display block
					font-family icono
					font-size 1.2em
					margin -20px 0 0 130px 
					vertical-align bottom
		.eventActual
			display block
			font-size .9em
			font-weight 100
			height auto
			padding 10px 1em 10px 1em
			position relative
			z-index 5
			.contingutEventActual
				animation animacionLlista 3s 1
				-webkit-animation animacionLlista 3s 1
				.event
					// background rgba(#ebf0f4,.8)
					color rgba(titulo,1) 
					display block
					font-size .9em
					font-weight 400
					letter-spacing .055em
					line-height 1.2em
					margin .7em auto 0 auto
					padding 10px 20px
					text-align center
					width 100%
					.lloc
						font-size .7em
						letter-spacing 1px
						margin .5em 0 0 0 
						text-transform uppercase
						p
							&:before
								content '\e606'
								font-family icono
								margin 0 5px 0 0 
				.hora
					color titulo
					display block
					font-size 1.2em
					font-style italic
					font-weight 900
					margin 0 auto 
					text-align center
					width 200px
			.titol
				border-radius 10px
				color rgba(black,1)
				font-size 1em
				font-weight 400
				left 10px
				padding 0 .7em
				position absolute
				top 20px
				span
					left 50px
					position absolute
					top 0px
					transform rotateZ(180deg)
					-ms-transform rotateZ(180deg)
					-webkit-transform rotateZ(180deg)
					&:after
						content '\e603'
						font-family icono
		.indicadorMes
			height 20px
			position relative
			p
				color rgba(titulo,1)
				font-style italic
				position absolute
				left 30px
				top 0px
			span
				color rgba(titulo,.6)
				font-style italic
				font-weight 100
				position absolute
				left 90px
				top 0px
		.llista
			background rgba(#ebf0f4,1)
			border-top 1px solid gris
			border-bottom 1px solid gris
			height 150px
			margin 20px 0 50px 0
			overflow-y auto
			.contenidoLista
				padding 0 0 0 30px
				.llistaVisible
					.event
						border-bottom 1px solid rgba(black,.1)
						padding 5px 0
						position relative
						.detallEvent
							.flecha
								background none
								border 1px solid rgba(rosa,1)
								border-radius 50%
								height 22px
								line-height 21px
								position absolute 
								right 15px
								text-align center
								top 12px
								width 22px
								&:after
									color rgba(rosa,1)
									content '\e603'
									font-family icono
							.quan
								.hora
									color rgba(black,.6)
									font-size .7em
									position absolute
									top 12px
									right 60px
									p
										&:after
											content 'h'
											margin 0 0 0 2px
						.Event
							padding 5px 0
							width 160px
							p
								color rgba(black,.6)
								font-size .8em
								font-weight 400
							.detall
								display none
								font-size 1em
								font-weight 100
							.lloc
								font-size .7em
								font-weight 100
								margin 8px 0 0 0 
								text-transform uppercase
								p
									color rgba(black,.3)
									&:before
										content '\e606'
										font-family icono
										font-size 1em
										margin 0 3px 0 0 
.bg 
	background azul
	height 100%
	left 0
	position fixed
	top 0
	width 100%
	z-index -50						
.invisible
	display none
.menu
	background secundario
	border-radius 5px
	bottom 0
	color white
	left 0
	margin 0 auto .4em auto
	position fixed
	right 0
	width 97%
	z-index 20
	animation animacionMenu 1s 1
	-webkit-animation animacionMenu 1s 1
	.botones
		.botonMenu
			display inline-block
			line-height 2em
			text-align center
			vertical-align bottom
			width 32%
			a
				color white
				text-decoration none
			.compartir
				font-size 1.2em
				&:after
					content '\e602'
					font-family icono
					font-size .9em
				&:active
					color rgba(white,.3)
			.mapa
				&:after
					content '\e600'
					font-family icono
					font-size 1em
				&:active
					color rgba(white,.3)
			.menuResizer
				font-weight 400
				&:active
					color rgba(white,.3)
				.aumentar
					&:after
						content 'A'
						font-size 1em
				.disminuir
					&:after
						content 'A'
						font-size .6em
	.resizer
		background rgba(black,.2)
		border-top 1px solid rgba(#283148,.4)
		box-shadow 0px 1px 0px rgba(white,.1)
		color rgba(white,.7)
		padding .4em 0
		.botonResizer
			display inline-block
			font-weight 400
			text-align center
			width 49%
			.disminuir
				border-right 1px solid rgba(#283148,.4)
				box-shadow 1px 0px 0px rgba(white,.1)
				&:after
					content 'A'
					font-size .7em
				&:active
					color rgba(white,.3)
			.aumentar
				&:after
					content 'A'
					font-size 1.2em
				&:active
						color rgba(white,.3)
	.social
		background rgba(black,.2)
		border-top 1px solid rgba(#283148,.45)
		padding .8em 0 .6em 0
		.botonSocial
			display inline-block
			font-weight 400
			text-align center
			width 49%
			.twitter
				margin 0 0 0 1.5em
