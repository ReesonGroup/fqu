

footer
	background footer
	.email
		display inline-block
		opacity .4
		padding 15px
		position relative
		width 100%
		span
			display block
			padding 0 40px 0 0
			text-align right
		a
			color negro		
			position absolute
			right 25px
			top 17px
			&:after 
				content email
				font-family icono
	.logo
		display inline-block
		vertical-align middle
		figure
			img 
				height 4.5rem
				opacity .3
				padding 15px 25px 7px 15px
				width auto

.botonSecciones
	font-size 0
	width 100%
	transition all .5s
	-webkit-transition all .5s
	.boton
		background white
		border-bottom 3px solid rgba(separador,1)
		border-right 1px solid separador
		color #6e868f
		display inline-block
		font-size 15px
		height 52px
		line-height 52px
		text-align center
		text-transform uppercase
		width 33%
		&:hover
			background rgba(#586b72,.01)
			border-bottom none
			color white
	.center
		width 34%	
.calendario
	float right
	margin -80px -100% 0 0 
	overflow hidden
	width 0%
	transition all .5s
	-webkit-transition all .5s
	.botonera
		background rojoClaro
		border-left 5px solid rgba(rojoOscuro,1)
		border-right 5px solid rgba(rojoOscuro,1)
		width 100%
		height auto
		position relative
		&:after
			border-bottom 37px solid transparent
			border-left 10px solid transparent
			border-right 8px solid rojoOscuro
			border-top 37px solid transparent
			content ''
			position absolute
			right 0px
			top 0
		ul
			white-space nowrap
			overflow-x auto
			padding 12px 0
			&::-webkit-scrollbar
				display none
			li
				background rojoOscuro
				border-radius 50%
				display inline-block
				height 50px
				margin 0 20px 0 0 
				padding 5px
				position relative
				text-align center
				width 50px
				&:first-child
					margin 0 20px 0 20px
				a
					color white
					font-style italic
					text-decoration none
					span 
						font-size .5em
						left 30%
						position absolute
						top 28px
	.eventoActual
		background white
		box-shadow 0 0 50px rgba(black,.5) inset
		border-top 5px solid rojoLogo
		.titulo
			width 90%
			p
				margin 10px 0 0 20px
				text-transform uppercase
				span
					font-weight 900
		.detall
			padding 15px 0 35px 0 
			.event
				border-left 3px solid rojo
				color rojo
			.icono
				float left
				padding 5px 20px 0 20px
				&:after
					content micro
					font-family icono
			.lloc
				color gris
				font-size 12px
				font-weight 300
				margin 0 0 0 60px
				text-align left
				text-transform uppercase
.header
	height 500px
	width 100%
	position relative
	.heroOuter
		height 100%
		width 100%
		overflow hidden
		.hero
			background gris
			height 100%
			width 100%
			animation animacion 10s infinite
			-webkit-animation animacion 10s infinite
			.heroInner
				margin -200px 0 0 0 
				height 250%
				width 250%
				background-image url(../img/hero.jpg)
				background-position 0
				background-repeat repeat-x repeat-y 
				background-size 50% auto
				transform: skew(0deg, 12deg);
				-ms-transform: skew(0deg, 12deg);
				-webkit-transform: skew(0deg, 12deg);

	.logoOuter
		position absolute
		top 0 
		right 0
		bottom 0
		left 0
		@css {
			background: -moz-linear-gradient(left,  rgba(255,255,255,1) 0%, rgba(240,240,240,1) 56%, rgba(229,229,229,0) 100%);
			background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(255,255,255,1)), color-stop(56%,rgba(240,240,240,1)), color-stop(100%,rgba(229,229,229,0)));
			background: -webkit-linear-gradient(left,  rgba(255,255,255,1) 0%,rgba(240,240,240,1) 56%,rgba(229,229,229,0) 100%);
			background: -o-linear-gradient(left,  rgba(255,255,255,1) 0%,rgba(240,240,240,1) 56%,rgba(229,229,229,0) 100%);
			background: -ms-linear-gradient(left,  rgba(255,255,255,1) 0%,rgba(240,240,240,1) 56%,rgba(229,229,229,0) 100%);
			background: linear-gradient(to right,  rgba(255,255,255,1) 0%,rgba(240,240,240,1) 56%,rgba(229,229,229,0) 100%);
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#00e5e5e5',GradientType=1 );

		}
		h1
			color rgba(black,.8)
			font-size 24px
			font-weight 400
			letter-spacing 1px
			line-height 1.3em
			text-align center
			text-transform uppercase
			span
				font-weight 700
		.logoInner
			padding 25px 0 0 0 
			figure
				img
					display block
					margin 0 auto
					width 250px
.llamadaClendarioLabel
	background white
	float right
	transition all .5s
	-webkit-transition all .5s
	.botonLabel
		color rojoClaro
		height 80px
		text-align center
		width 40px
		transition all .5s
		-webkit-transition all .5s
		.flecha
			font-size 1.5em
			&:after
				content flechaDerecha
				font-family icono
				line-height 80px
.llamadaClendarioTitulo
	background rojoLogo
	font-weight 400
	height 80px
	width 100%
	transition all .5s
	-webkit-transition all .5s
	h2
		color white
		font-size 21px
		font-style italic
		letter-spacing 1px
		padding 15px 0 0 30px
		text-transform uppercase
		span
			display block
			font-size 16px 
			letter-spacing 0px
			text-transform lowercase
.seccionesContenido
	background grisFondo
	width 100%
	transition all .5s
	-webkit-transition all .5s
	.patrocinadors
		padding 30px 0
		.uno
			display block
			margin 25px auto 0 auto
			width 40%
			&:first-child
				margin 0 auto 0 auto
#mainCheckbox
	display none
#mainCheckbox:checked ~ .calendario 
	margin -80px 0 0 0 
	width 100%
#mainCheckbox:checked ~ .llamadaClendarioLabel
	background none
#mainCheckbox:checked ~ .llamadaClendarioLabel .botonLabel 
	transform rotateZ(180deg)
	-ms-transform rotateZ(180deg)
	-webkit-transform rotateZ(180deg)
#mainCheckbox:checked ~ .botonSecciones
	margin-left -100%
#mainCheckbox:checked ~ .llamadaClendarioTitulo
	margin-left -100%
#mainCheckbox:checked ~ .seccionesContenido
	margin-left -100%

@keyframes animacion
	0%
		transform translate(-100%, -100%)
		-ms-transform translate(-100%, -100%)
		-webkit-transform translate(-100%, -100%)
	50%
		transform translate(50%, 50%)
		-ms-transform translate(50%, 50%)
		-webkit-transform translate(50%, 50%)

	100%
		transform translate(-100%, -100%)
		-ms-transform translate(-100%, -100%)
		-webkit-transform translate(-100%, -100%)

