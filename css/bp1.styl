
article
	background rgba(azul,.7)
	border-radius 5px
	height auto
	margin 10px auto 20px auto
	padding 0 0 10px 0
	width 95%
	.header
		color white
		font-style italic
		text-transform uppercase
		font-size 21px
		padding 20px 20px 10px 20px
	.imagen
		width auto
		height 135px
		background-image url(../img/salutacions/ajuntament.jpg)
		background-position 0px 0px 
		background-repeat no-repeat
		background-size 100% auto
	.footer
		font-size 16px
		padding 20px
		position relative
		a
			color white
			font-size 16px
			font-weight 400
			position absolute
			right 40px
			text-decoration none
			top 15px
