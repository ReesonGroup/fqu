
section
  width 90%
  max-width 46em
  text-align justify
  padding 1em 2em 0
  margin 0 auto
  color #ecf0f1
  line-height 1.3
  font-size 1.5em
  p
    opacity 0.4
.ha-header
  background-image url(../img/hero.jpg)
  background-position 0 -100px
  background-repeat repeat-x repeat-y 
  background-size 35% auto
  position fixed
  top 0
  left 0
  width 100%
  z-index 50
  -webkit-transform translateY(0%)
  -moz-transform translateY(0%)
  transform translateY(0%)
  -webkit-transition all 0.5s
  -moz-transition all 0.5s
  transition all 0.5s
.ha-header-perspective
  @css {
    background: -moz-radial-gradient(center, ellipse cover,  rgba(153,153,153,0) 0%, rgba(2,2,2,1) 99%, rgba(0,0,0,1) 100%);
    background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(153,153,153,0)), color-stop(99%,rgba(2,2,2,1)), color-stop(100%,rgba(0,0,0,1)));
    background: -webkit-radial-gradient(center, ellipse cover,  rgba(153,153,153,0) 0%,rgba(2,2,2,1) 99%,rgba(0,0,0,1) 100%);
    background: -o-radial-gradient(center, ellipse cover,  rgba(153,153,153,0) 0%,rgba(2,2,2,1) 99%,rgba(0,0,0,1) 100%);
    background: -ms-radial-gradient(center, ellipse cover,  rgba(153,153,153,0) 0%,rgba(2,2,2,1) 99%,rgba(0,0,0,1) 100%);
    background: radial-gradient(ellipse at center,  rgba(153,153,153,0) 0%,rgba(2,2,2,1) 99%,rgba(0,0,0,1) 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00999999', endColorstr='#000000',GradientType=1 );
  }
  padding 0 7%
  height 100%
  width 100%
  overflow hidden
  position relative
  .logoOuter
    background rgba(white,.9)
    left 0
    position absolute
    width 450px
    height 100%
    h1
      font-size 24px
      font-weight 300
      letter-spacing 1px
      line-height 1.2em
      text-align center
      text-transform uppercase
      span
        letter-spacing 0px
        font-weight 700
  .logoInner
    img
      display block
      margin 15px auto 0 auto
      width 200px
.ha-header-large
  height 350px
  .logoOuter
    left 0
    position absolute
    width 450px
    height 100%
    h1
      font-size 24px
      font-weight 300
      letter-spacing 1px
      line-height 1.2em
      text-align center
      text-transform uppercase
      -webkit-transition all 1s
      -moz-transition all 1s
      transition all 1s
      span
        letter-spacing 0px
        font-weight 700
    .logoInner
      img
        display block
        margin 15px auto 0 auto
        width 200px
        -webkit-transition all .5s
        -moz-transition all .5s
        transition all .5s
.ha-header-small
  height 80px
  .logoOuter
    background rgba(white,1)
    h1
      left 100px
      font-size 20px
      position absolute
      text-align left
      top 13px
    .logoInner
      img
        width 65px
        position absolute
        top -10px 
        left 15px
