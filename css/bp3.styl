
.calendario
	margin 0
	width 50%
	position relative
	.botonera
		border-left 15px solid rgba(negroOscuro,1)
		border-radius 0 0 0 15px
		position fixed
		right 0
		top 160px
		width 50%
		x-index 6
		&:after
			border-bottom 5px solid azul
			border-left 5px solid azul
			border-right 5px solid azul
			border-top 5px solid azul
			content ""
			height 100vh
			left 50%
			position absolute
			top 74px
			width 0px 
			x-index 0
	.eventoActual
		height 80px
		position fixed
		right 0
		width 50%
		.detall
			padding 16px 16px 20px 20px
		.titulo
			background verdeOscuro
			border-radius 5px 5px 0 0 
			box-shadow 0 -2px 16px rgba(black,.8)
			height 70px
			position fixed 
			right 17%
			top 15px
			width 140px
			&:after
				content ""
				border-bottom 37px solid transparent
				border-left 70px solid transparent
				border-right 70px solid transparent
				border-top 15px solid verdeOscuro
				content ''
				position absolute
				right 0px
				left 0
				bottom -52px
			p
				color rgba(white,1)
				font-family Oswald
				font-size 1.2em
				font-weight 400
				left 14px
				line-height 30px
				margin 0 
				position absolute
				text-transform uppercase
				top 9px
				transform: scale(1, .9);
				-ms-transform: scale(1, .9);
				-webkit-transform: scale(1, .9);
				span
					display block
					font-weight 700
					transform: scale(1, 1.2);
					-ms-transform: scale(1, 1.2);
					-webkit-transform: scale(1, 1.2);
	.listaDias
		display none

.menu
	background menuLateral
	bottom 0
	height 100%
	left 0 
	position fixed
	top 0 
	width 80px
	z-index 50
	.botonSecciones
		display none
.header
	border-bottom 5px solid verde
	height 85px
	position fixed
	.heroOuter
		.hero
			background gris
			animation animacionTablet 150s infinite
			-webkit-animation animacionTablet 150s infinite
			.heroInner
				margin -40px 0 0 0 
				background-position 5px 7px
				background-size 15% auto
				transform: skew(0deg);
				-ms-transform: skew(0deg);
				-webkit-transform: skew(0deg);
	.logoOuter
		h1
			line-height 1.2em 
			font-size 20px
			margin -55px 0 0 185px
			text-align left
		.logoInner
			position relative
			figure
				position absolute
				top 8px 
				left 100px
				img
					display block
					margin 0 auto
					width 63px
.seccionesContenido
	display none


// Animaciones
@keyframes animacionTablet
	0%
		transform translate(-100%, -100%)
		-ms-transform translate(-100%, -100%)
		-webkit-transform translate(-100%, -100%)
	50%
		transform translate(0%, 40%)
		-ms-transform translate(0%, 40%)
		-webkit-transform translate(0%, 40%)

	100%
		transform translate(-100%, -100%)
		-ms-transform translate(-100%, -100%)
		-webkit-transform translate(-100%, -100%)