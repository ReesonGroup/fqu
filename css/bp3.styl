

.botonSecciones
	float left
	margin -70px 0 0 0
	width 50%
.calendario
	height auto
	margin 0 0 0 0 
	width 100%
	.botonera
		float right
		width 50%
	.eventoActual
		.titulo
			background verdeOscuro
			border-radius 5px 5px 0 0 
			box-shadow 0 -2px 16px rgba(black,.8)
			height 80px
			position absolute 
			right 45px
			top 25px
			width 150px
			&:after
				content ""
				border-bottom 37px solid transparent
				border-left 75px solid transparent
				border-right 75px solid transparent
				border-top 15px solid verdeOscuro
				content ''
				position absolute
				right 0px
				left 0
				bottom -52px
			p
				margin 0 0 0 0
				padding 15px 10px 0px 10px
				text-transform uppercase
				position absolute
				top 3px
				left 5px
				span
					display block
					font-weight bold
					transform: scale(1, 1.3);
					-ms-transform: scale(1, 1.3);
					-webkit-transform: scale(1, 1.3);
	.listaDias
		margin 100px 0 0
		position absolute
		right 0px
		width 48%
.header
	height 100px
	.heroOuter
		.hero
			background gris
			animation animacionTablet 150s infinite
			-webkit-animation animacionTablet 150s infinite
			.heroInner
				margin -40px 0 0 0 
				background-position 5px 7px
				background-size 15% auto
				transform: skew(0deg);
				-ms-transform: skew(0deg);
				-webkit-transform: skew(0deg);
	.logoOuter
		h1
			margin -50px 0 0 120px
			text-align left
		.logoInner
			position relative
			figure
				position absolute
				top 8px 
				left 16px
				img
					display block
					margin 0 auto
					width 80px
.llamadaClendarioLabel
.llamadaClendarioTitulo
	display none
.seccionesContenido
	float left
	width 50%


// Animaciones
@keyframes animacionTablet
	0%
		transform translate(-110%, -110%)
		-ms-transform translate(-110%, -110%)
		-webkit-transform translate(-110%, -110%)
	50%
		transform translate(0%, 40%)
		-ms-transform translate(0%, 40%)
		-webkit-transform translate(0%, 40%)

	100%
		transform translate(-110%, -110%)
		-ms-transform translate(-110%, -110%)
		-webkit-transform translate(-110%, -110%)