
.calendario
	margin 0
	width 46%
	position relative
	.botonera
		border-left 15px solid rgba(negroOscuro,1)
		border-radius 0 0 0 15px
		position fixed
		right 0
		top 160px
		width 46%
		z-index 6
	.eventoActual
		background grisEventoActual
		height 80px
		position fixed
		right 0
		top 80px
		width 46%
		z-index 5
		.detall
			padding 16px 16px 20px 20px
		.titulo
			display none
	.listaDias
		display block
		left 5px
		margin 245px 0 0 0 
		position relative
		z-index 6
		.event
			width 88%
	.timelineOuter
		height 100%
		position fixed
		width 46%
		x-index 0
		.timelineInner
			background rgba(white,.4)
			height 100vh
			left 50%
			position absolute
			width 4px
	.timelineOuterbp1
		display none
	.tituloOuter
			display block
			left 50%
			position fixed
			top 15px
			width 50%
			.tituloInner
				left 50%
				margin 0 0 0 -45px 
.menu
	background menuLateral
	box-shadow 0 -2px 5px rgba(black,.6) inset
	bottom 0
	display block
	height 100%
	left 0 
	position fixed
	top 0 
	width 80px
	z-index 50
	ul
		color rgba(white,.8)
		height 100%
		text-align center
		position relative
		.botonOuter
			cursor pointer
			height 80px
			// &:nth-child(even)
			// 	background red
			.botonInner
				position relative
				text-shadow 0 2px 5px rgba(black,.6)
				width 100%
				h3 
					bottom 24px
					font-size .55em
					position relative
				.icono
					&:after
						bottom 28px
						display block
						font-family icomoon
						font-size 2em
						left 38%
						position absolute
				.comentar
					&:after
						content comentar
				.compartir
					&:after
						content compartir
				.contactar
					&:after
						content email
				.info
					&:after
						content info
				.patro
					color verde
					&:after
						content sponsor
				.pubilles
					&:after
						content pubillas
				.salutacions
					&:after
						content salutacions
			.uno
				margin 80px 0 0 0 
			.cinco
				bottom 80px
				position absolute
			.seis
				bottom 160px
				position absolute
			.siete
				bottom 240px
				position absolute
.header
	border-bottom 5px solid verde
	height 85px
	position fixed
	z-index 3
	.heroOuter
		.hero
			background gris
			animation animacionTablet 150s infinite
			-webkit-animation animacionTablet 150s infinite
			.heroInner
				margin -40px 0 0 0 
				background-position 5px 7px
				background-size 15% auto
				transform: skew(0deg);
				-ms-transform: skew(0deg);
				-webkit-transform: skew(0deg);
	.logoOuter
		h1
			line-height 1.2em 
			font-size 20px
			margin -55px 0 0 185px
			text-align left
		.logoInner
			position relative
			figure
				position absolute
				top 8px 
				left 100px
				img
					display block
					margin 0 auto
					width 63px
.llamadaCalendarioLabel
	display none
.llamadaCalendarioTitulo 
	display none
.seccionesContenido
	background red
	margin 0 0 0 80px
	width 46%
	display none

// Acciones al activar el mainCheck
#mainCheckbox:checked ~ .calendario 
	margin 0
	width 46%
#mainCheckbox:checked ~ .botonSecciones
	margin-left 0
#mainCheckbox:checked ~ .llamadaClendarioTitulo
	margin-left 0
#mainCheckbox:checked ~ .seccionesContenido
	margin-left 0
#mainCheckbox:checked ~ .calendario .timelineOuterbp1 
	display none


// Animaciones
@keyframes animacionTablet
	0%
		transform translate(-100%, -100%)
		-ms-transform translate(-100%, -100%)
		-webkit-transform translate(-100%, -100%)
	50%
		transform translate(0%, 40%)
		-ms-transform translate(0%, 40%)
		-webkit-transform translate(0%, 40%)

	100%
		transform translate(-100%, -100%)
		-ms-transform translate(-100%, -100%)
		-webkit-transform translate(-100%, -100%)